{
  "openapi": "3.0.0",
  "info": {
    "title": "Veterinary Franchise Microservice API",
    "version": "1.0.0",
    "description": "This is a simple CRUD API application made with Express and documented with Swagger"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "URL Base"
    }
  ],
  "paths": {
    "/tutor": {
      "post": {
        "summary": "Cadastro de Tutor",
        "description": "Rota responsável para cadastrar um Tutor",
        "tags": ["Tutors"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tutor"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/TutorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ServerError"
                }
              }
            }
          }
        }
      }
    },
    "/tutors": {
      "get": {
        "summary": "Lista de Tutors",
        "description": "Retorna a lista de todos os Tutors",
        "tags": ["Tutors"],
        "responses": {
          "200": {
            "description": "Sucesso, retorna a lista de Tutors",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TutorResponse"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/ServerError"
                }
              }
            }
          }
        }
      }
    },
    "/tutor/{id}": {
      "put": {
        "summary": "Atualizar Tutor",
        "description": "Atualiza os dados de um Tutor existente",
        "tags": ["Tutors"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do Tutor a ser atualizado",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome do tutor",
                    "example": "Jonh Doe",
                    "required": true
                  },
                  "phone": {
                    "type": "string",
                    "description": "Telefone do tutor",
                    "example": "85989323895",
                    "required": true
                  },
                  "email": {
                    "type": "string",
                    "description": "E-mail do tutor",
                    "example": "jose.abreu@compasso.com",
                    "required": true
                  },
                  "date_of_birth": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Data de nascimento do tutor",
                    "example": "1993-12-12T10:10:00.000Z",
                    "required": true
                  },
                  "zip_code": {
                    "type": "string",
                    "description": "Código postal do tutor",
                    "example": "61760000",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TutorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Messagem de erro, item não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletar Tutor",
        "description": "Deleta um Tutor existente",
        "tags": ["Tutors"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do Tutor a ser deletado",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Messagem de erro, item não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pet": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do pet",
            "example": "Lilo",
            "required": true
          },
          "species": {
            "type": "string",
            "description": "Espécie do pet",
            "example": "dog",
            "required": true
          },
          "carry": {
            "type": "string",
            "description": "Transporte do pet",
            "example": "p",
            "required": true
          },
          "weight": {
            "type": "number",
            "description": "Peso do pet",
            "example": 5,
            "required": true
          },
          "date_of_birth": {
            "type": "string",
            "format": "date-time",
            "description": "Data de nascimento do pet",
            "example": "1993-12-12T12:10:00.000Z",
            "required": true
          }
        }
      },
      "Tutor": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome do tutor",
            "example": "Jonh Doe",
            "required": true
          },
          "phone": {
            "type": "string",
            "description": "Telefone do tutor",
            "example": "85989323895",
            "required": true
          },
          "email": {
            "type": "string",
            "description": "E-mail do tutor",
            "example": "jose.abreu@compasso.com",
            "required": true
          },
          "date_of_birth": {
            "type": "string",
            "format": "date-time",
            "description": "Data de nascimento do tutor",
            "example": "1993-12-12T10:10:00.000Z",
            "required": true
          },
          "zip_code": {
            "type": "string",
            "description": "Código postal do tutor",
            "example": "61760000",
            "required": true
          },
          "pets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Pet"
            },
            "description": "Lista de pets do tutor",
            "default": []
          }
        }
      },
      "TutorResponse": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "ID do tutor",
            "example": "64c2c567bc9adb3de05aa238",
            "required": true
          },
          "name": {
            "type": "string",
            "description": "Nome do tutor",
            "example": "Jonh Doe",
            "required": true
          },
          "phone": {
            "type": "string",
            "description": "Telefone do tutor",
            "example": "85989323895",
            "required": true
          },
          "email": {
            "type": "string",
            "description": "E-mail do tutor",
            "example": "jose.abreu@compasso.com",
            "required": true
          },
          "date_of_birth": {
            "type": "string",
            "format": "date-time",
            "description": "Data de nascimento do tutor",
            "example": "1993-12-12T10:10:00.000Z",
            "required": true
          },
          "zip_code": {
            "type": "string",
            "description": "Código postal do tutor",
            "example": "61760000",
            "required": true
          },
          "pets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Pet"
            },
            "description": "Lista de pets do tutor",
            "default": []
          }
        }
      },
      "ServerError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Messagem de erro interno do servidor",
            "example": "Internal Server Error"
          }
        }
      },
      "NotFoundError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Messagem de erro, item não encontrado",
            "example": "Item not found"
          }
        }
      }
    }
  }
}
